extends layout
block content
    .container
        .jumbotron
            .container
                h1= title
                p Welcome to #{title}
                a.btn.btn-primary.btn-lg(href='#') Learn more &raquo;
        .container
            form(method='post', action='contact/send')
                h1 Contact
                .form-group
                    label Name
                    input.form-control(type='text', name='name', placeholder='Enter Name')
                .form-group
                    label Email
                    input.form-control(type='text', name='email', placeholder='Enter Email')
                .form-group
                    label Message
                    textarea.form-control(name='message', placeholder='Enter Message...')
                button.btn.btn-default(type='submit') Submit